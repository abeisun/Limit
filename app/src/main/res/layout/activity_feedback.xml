<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/how_are_you_feeling"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/happy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:src="@drawable/feeling_good"
        android:tint="#C53F3B"/>

    <ImageView
        android:id="@+id/meh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:src="@drawable/feeling_meh"
        android:tint="#C53F3B" />

    <ImageView
        android:id="@+id/sadness"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:src="@drawable/feeling_sad"
        android:tint="#C53F3B" />

    <ImageView
        android:id="@+id/hungover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:src="@drawable/hungover"
        android:tint="#C53F3B" />

    </LinearLayout>
